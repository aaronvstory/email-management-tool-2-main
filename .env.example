# Email Management Tool - Environment Configuration Example
# Copy this file to .env and customize for your deployment

# =============================================================================
# Security Configuration
# =============================================================================

# Flask secret key for session management (REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Admin credentials (change in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# =============================================================================
# SMTP Proxy Configuration
# =============================================================================

# Local SMTP proxy port
SMTP_PROXY_PORT=8587

# =============================================================================
# IMAP Configuration
# =============================================================================

# IMAP connection timeout (seconds)
IMAP_TIMEOUT=30

# IMAP IDLE timeout (seconds) - Gmail max is 29 minutes
IMAP_IDLE_TIMEOUT=1740

# =============================================================================
# Gmail-Specific Configuration
# =============================================================================

# Gmail All Mail Purge (prevents duplicate emails after release)
# - Set to 1 (enabled, recommended) to purge originals from [Gmail]/All Mail
# - Set to 0 (disabled) to skip All Mail cleanup (emergency rollback only)
# Default: 1 (enabled)
GMAIL_ALL_MAIL_PURGE=1

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Verbose IMAP logging (0=off, 1=on)
IMAP_LOG_VERBOSE=0

# =============================================================================
# Application Behavior
# =============================================================================

# Enable debug mode (DO NOT use in production!)
FLASK_DEBUG=0

# Database path (default: email_manager.db)
# DATABASE_PATH=email_manager.db

# Encryption key path (default: key.txt)
# ENCRYPTION_KEY_PATH=key.txt
